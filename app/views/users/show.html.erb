<%= render "shared/header" %>
<div class="main">
  <div class="item-show">
    <div class="item-box">
      <%# ヘッダー %>
      <div class="user-header">
        <div class="user-header-image">
          <% if @user.header_image %>
            <%= image_tag @user.header_image, class: "header-image" %>
          <% else %>
            <%= image_tag @user.header_image, class: "header-image" %>
          <% end %>
        </div>
        <div class="user-contents">
          <div class="user-icon-image">
            <% if @user.icon_image %>
              <%= image_tag @user.icon_image, class: "icon-image" %>
            <% end %>
          </div>
          <h3><%= @user.nickname %></h3>
          <div class="user-status">
            <span>評価: 0</span>
            <span>出品数: 0</span>
          </div>
        </div>
      </div>
      <%= link_to "ユーザー情報変更", edit_user_registration_path %>
      <%# //ヘッダー %>
      <%# 商品一覧 %>
      <div class='item-contents'>
        <h2 class='title'><%= @user.nickname %>さんの商品</h2>
        <ul class='item-lists'>
          <% if @items != [] %>
            <%= render partial: 'items/item', collection: @items %>
          <% else %>
            <div class="item-list-none">
              <p>まだ出品はありません</p>
            </div>
          <% end %>
        </ul>
      </div>
      <%# /商品一覧 %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>